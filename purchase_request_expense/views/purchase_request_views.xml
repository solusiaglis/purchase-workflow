<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_purchase_request_form_inherit_expense" model="ir.ui.view">
        <field name="name">purchase.request.form.inherit.expense</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_form" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button
                    name="%(action_purchase_request_line_make_expense)d"
                    string="Create Expense"
                    states="approved"
                    type="action"
                />
            </xpath>
            <div class="oe_button_box" position="inside">
                <button
                    name="action_view_expenses"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-money"
                    attrs="{'invisible': [('expense_count', '=', 0)]}"
                >
                    <field name="expense_count" widget="statinfo" string="Expenses" />
                </button>
            </div>

            <field name="estimated_cost" position="after">
                <field name="expense_amount" />
            </field>

            <xpath expr="//field[@name='line_ids']/form/sheet" position="inside">
                <notebook>
                    <page string="Expenses" name="expenses">
                        <field name="expense_ids" readonly="1" nolabel="1">
                            <tree>
                                <field name="date" />
                                <field name="name" />
                                <field name="employee_id" />
                                <field name="unit_amount" />
                                <field name="quantity" />
                                <field name="total_amount" />
                                <field name="state" />
                                <field name="sheet_id" />
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>



        </field>
    </record>
</odoo>
