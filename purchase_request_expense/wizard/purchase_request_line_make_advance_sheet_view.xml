<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_purchase_request_line_make_advance_sheet" model="ir.ui.view">
        <field name="name">purchase.request.line.make.advance.sheet.form</field>
        <field name="model">purchase.request.line.make.advance.sheet</field>
        <field name="arch" type="xml">
            <form string="Create Advance Sheet">
                <group>
                    <field name="employee_id"/>
                </group>
                <field name="item_ids" nolabel="1">
                    <tree create="false" editable="bottom">
                        <field name="item_id" readonly="1"/>
                        <field name="product_id" readonly="1"/>
                        <field name="name"/>
                        <field name="product_qty"/>
                        <field name="product_uom_id" groups="uom.group_uom"/>
                        <field name="estimated_cost"/>
                    </tree>
                </field>
                <footer>
                    <button name="make_expense_sheet" 
                            string="Create Advance Sheet" 
                            type="object" 
                            class="btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Advance Expense Action -->
    <record id="action_purchase_request_line_make_advance" model="ir.actions.act_window">
        <field name="name">Create Advance Sheet</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.request.line.make.advance.sheet</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>